{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"alleo": ["./alleo.d.ts"],
			"alleoWidgetUtils": ["./lib/alleoWidgetUtils.ts"]
		}
	},
	"include": [
		"./alleo.d.ts",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"./lib/alleoWidgetUtils.ts"
	]
}
